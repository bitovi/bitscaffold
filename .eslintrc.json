{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2022": true,
    "jest": true
  },
  "extends": [
    "@bitovi/eslint-config/rules/base",
    "@bitovi/eslint-config/rules/jest",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^[_]"
      }
    ]
  },
  "ignorePatterns": [
    "dist/**/*"
  ]
}