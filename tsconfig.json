{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/**/*", "./bin/**/*"]
}
