{
    "models": {
        "Employee": {
            "tableName": "employee",
            "fields": {
                "id": {
                    "type": "uuid",
                    "primary": true,
                    "required": true
                },
                "name": {
                    "type": "string",
                    "required": true
                },
                "start_date": {
                    "type": "date",
                    "required": false
                },
                "end_date": {
                    "type": "date",
                    "required": false
                }
            },
            "relationships": {
                "HasMany": {
                    "Skill": {
                        "from": "id", // employee.id
                        "to": "id", // skill.id
                        "through": "employee__skill"
                    }
                }
            }
        },
        "Skill": {
            "tableName": "skill",
            "fields": {
                "id": {
                    "type": "uuid",
                    "primary": true,
                    "required": true
                },
                "name": {
                    "type": "string",
                    "required": true,
                    "unique": true
                }
            },
            "relationships": {
                "HasMany": {
                    "Employee": {
                        "from": "id", // skill.id
                        "to": "id", // employee.id
                        "through": "employee__skill"
                    }
                }
            }
        }
    }
}